{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a registered user in the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique ID of the user, from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's public display name or nickname."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL for the user's avatar image."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": ["User", "Member", "Admin", "Super-admin", "Developer"]
        },
        "level": {
            "type": "number",
            "description": "The user's current membership level (0-50)."
        },
        "uplineUid": {
            "type": "string",
            "description": "The UID of the user who referred this user."
        },
        "referralCode": {
            "type": "string",
            "description": "The user's unique referral code."
        },
        "bio": {
            "type": "string",
            "description": "A short biography of the user."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was last updated."
        }
      },
      "required": ["uid", "email", "role", "level", "createdAt"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a financial transaction in a user's wallet.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["income", "withdrawal", "deposit", "fee"]
        },
        "amount": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "completed", "failed"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["type", "amount", "status", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "description": "A notification for a user.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["system", "reward", "network", "quest"]
        },
        "isRead": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
       "required": ["title", "type", "isRead", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores the public and private profile data for each user."
    },
    "/users/{userId}/downline/{downlineUserId}": {
        "schema": {
            "$ref": "#/entities/User"
        },
        "description": "A subcollection storing users who are in the direct downline of the parent user."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores all financial transactions for a user."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": {
        "$ref": "#/entities/Notification"
      },
      "description": "Stores notifications for a specific user."
    }
  }
}
